{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "curly": 2,
        "valid-jsdoc": 1,
        "indent": [1, 4, {
            "SwitchCase": 1
        }],
        "no-trailing-spaces": 1,
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "constructor-super": "error",
        "generator-star-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "no-undef": "error",
        "no-unused-vars": "error",
        "no-use-before-define": "error",
        "no-class-assign": "error",
        "no-const-assign": "error",
        "no-duplicate-imports": "error",
        "no-dupe-class-members": "error",
        "no-this-before-super": "error",
        "no-var": "error",
        "object-shorthand": 0,
        "prefer-arrow-callback": 0,
        "prefer-const": 1,
        "prefer-spread": 0,
        "prefer-reflect": "error",
        "prefer-template": 1,
        "require-yield": 2,
        "semi": ["error", "always"]
    }
}